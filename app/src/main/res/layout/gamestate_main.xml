<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <Button
            android:id="@+id/Block9"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginTop="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toEndOf="@+id/Block8"
            app:layout_constraintTop_toBottomOf="@+id/Block1"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Block8"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toTopOf="@+id/tvAnswer"
            app:layout_constraintStart_toEndOf="@+id/Block7"
            app:layout_constraintTop_toBottomOf="@+id/Block5"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Block7"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Block4" />

        <Button
            android:id="@+id/Block6"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginTop="36dp"
            app:layout_constraintBottom_toTopOf="@+id/Block9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.388"
            app:layout_constraintStart_toEndOf="@+id/Block5"
            app:layout_constraintTop_toBottomOf="@+id/Block3"
            app:layout_constraintVertical_bias="0.041" />

        <Button
            android:id="@+id/Block5"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toEndOf="@+id/Block4"
            app:layout_constraintTop_toBottomOf="@+id/Block2" />

        <Button
            android:id="@+id/Block4"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="36dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Block1" />

        <Button
            android:id="@+id/Block3"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginTop="124dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.382"
            app:layout_constraintStart_toEndOf="@+id/Block2"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Block2"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="124dp"
            app:layout_constraintStart_toEndOf="@+id/Block1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/Block1"
            android:layout_width="83dp"
            android:layout_height="68dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="124dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Exit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tvAnswer"
            android:layout_width="248dp"
            android:layout_height="47dp"
            android:layout_marginBottom="112dp"
            android:gravity="center"
            android:text="Answer"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/btnInput"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Block5"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>